html
  head
    title= title

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
    link(rel="stylesheet" href="/styles.css")
  body
    section.h-100.h-custom(style='background-color: #eee;')
      .container.py-5.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-lg-10.col-xl-8
            .card.border-top.border-bottom.border-3(style='border-color: #f37a27 !important;')
              .card-body.p-5
                p.lead.fw-bold.mb-5(style='color: #f37a27;')= `Job ${job.id}`
                .row
                  .col.mb-3
                    p.small.text-muted.mb-1 Date
                    p= job.createdAt
                  .col.mb-3
                    p.small.text-muted.mb-1 Job Reference
                    p= job.references[0]
                .mx-n5.px-5.py-4(style='background-color: #f2f2f2;')
                  each part in job.parts
                    .row
                      .col-md-4.col-lg-6
                        p= part.kind
                      .col-md-4.col-lg-3
                        p= `${part.pages} pages`
