html
  head
    title= title

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
    link(rel="stylesheet" href="/styles.css")
  body
    section.h-100.h-custom(style='background-color: #eee;')
      .container.py-5.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-lg-10.col-xl-8
            .card.border-top.border-bottom.border-3(style='border-color: #f37a27 !important;')
              .card-body.p-5
                p.lead.fw-bold.mb-5(style='color: #f37a27;') Track an Order
                .row
                  .col
                    form(action="/orders" method="post")
                      .form-group
                        label(for="id") Identifier
                        input(type="text" class="form-control" name="id" placeholder="order id")
                        small(class="form-text text-muted") Enter an Identifier to search for an order

                      button(type="submit" class="btn btn-secondary") Search
